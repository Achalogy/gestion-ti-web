---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import { IconServer, IconServer2, IconSun } from "@tabler/icons-react";
import { IconMoon } from "@tabler/icons-react";

const { title, desc } = Astro.props;
const themeCookie = Astro.cookies.get("theme")?.value ?? "light";
---

<html lang="es" about="acha">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ?? "Gestion TI"}</title>
    <meta name="description" content={desc ?? ""} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico?v=16" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="generator" content={Astro.generator} />

    <!-- AÃ±adir Hack Font -->
    <!-- <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/hack-font/3.3.0/web/hack.min.css"
      integrity="sha512-XgCw4Srl8lC1ECwcaHwAU0WnxQwHkqmInzg9wJLtGB7DRuMaXPuK2k9WJ2AwRDGdrgK9eJpZl2hUlLi2WQssmw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    /> -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />

    <meta name="theme-color" content="#ffffff" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <ViewTransitions />
  <body>
    <main class={themeCookie}>
      <div
        class={`flex flex-col min-h-screen bg-[#FFF3FA] dark:bg-slate-900 dark:text-white`}
      >
        <!-- <script is:inline>
          function changeTheme() {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; theme=`);
            const theme = parts.pop().split(";").shift();
            const nTheme = theme == "dark" ? "light" : "dark";
            document.cookie = `theme=${nTheme}; expires=${new Date(Date.now() + 10e9).toUTCString()}; path=/`;
            window.location.reload();
          }
        </script> -->
        <!-- <div
          class="select-none p-4 flex justify-between px-[5%] bg-gradient-to-r dark:from-slate-800 dark:to-slate-800 from-purple-500 to-indigo-600 text-white"
        >
          <a class="font-semibold" href="/">Achalogy</a>
          <p onclick="changeTheme()" class="cursor-pointer">
            {themeCookie == "dark" ? <IconSun /> : <IconMoon />}
          </p>
        </div> -->

        <nav
          class="flex items-center justify-center h-[7rem] z-50 select-none fixed w-full bg-[#FFF3FA] bg-opacity-80 backdrop-blur-md px-8"
        >
          <a
            href="/"
            class="flex border h-[55%] border-black w-[18rem] hover:bg-[#C78CA0] hover:bg-opacity-30 cursor-pointer"
          >
            <div
              class="flex items-center justify-center border-r border-r-black h-full aspect-square"
            >
              <IconServer2 size={50} stroke={1} />
            </div>
            <p class="text-xl font-semibold p-4">Nombre Proyecto</p>
          </a>
          <div class="w-[75%] hidden xl:flex gap-16 items-center justify-end px-4">
            <a
              class="hover:bg-red-100 hover:bg-opacity-30 p-3 rounded cursor-pointer"
              >Sobre Nosotros</a
            >
            <a
              href="/plan-proyecto"
              class="hover:bg-red-100 hover:bg-opacity-30 p-3 rounded cursor-pointer"
              >Plan Proyecto</a
            >
            <a
              class="hover:bg-red-100 hover:bg-opacity-30 p-3 rounded cursor-pointer"
              >Contacto</a
            >
          </div>
        </nav>
        <slot />
      </div>

      <style is:global>
        /* Hide scrollbar for Chrome, Safari and Opera */
        *::-webkit-scrollbar {
          display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        * {
          -ms-overflow-style: none; /* IE and Edge */
          scrollbar-width: none; /* Firefox */
          font-family: "Lora";
        }

        body {
          background-color: white;
        }

        input {
          @apply rounded-md outline-none px-3 p-2;
        }

        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
          -webkit-appearance: none;
          margin: 0;
        }
        th,
        td {
          @apply border border-black dark:border-white p-1;
        }

        blockquote {
          @apply bg-slate-100 dark:bg-slate-800 border-l-4 border-l-red-500 p-2 rounded-md;
        }

        pre {
          @apply p-2 rounded-md;
        }

        code:not(pre code) {
          @apply px-2 rounded-md border border-slate-300 dark:border-slate-500;
        }

        .markdown a {
          @apply text-sky-500 underline underline-offset-4 cursor-pointer;
        }

        ol {
          @apply list-decimal list-outside mb-2;
        }

        .katex-html {
          @apply hidden;
        }
      </style>
    </main>
  </body>


</html>
